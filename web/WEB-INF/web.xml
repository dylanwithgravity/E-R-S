<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>ERS</display-name>
    <servlet>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>EmployeeHomeServlet</display-name>
        <servlet-name>EmployeeHomeServlet</servlet-name>
        <servlet-class>servlet.EmployeeHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeHomeServlet</servlet-name>
        <url-pattern>/employee_home</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>AdminHomeServlet</display-name>
        <servlet-name>AdminHomeServlet</servlet-name>
        <servlet-class>servlet.AdminHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminHomeServlet</servlet-name>
        <url-pattern>/admin_home</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>LogoutSessionServlet</display-name>
        <servlet-name>LogoutSessionServlet</servlet-name>
        <servlet-class>servlet.LogoutSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutSessionServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>EmployeeSubmitRequestServlet</display-name>
        <servlet-name>EmployeeSubmitRequestServlet</servlet-name>
        <servlet-class>servlet.EmployeeSubmitRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeSubmitRequestServlet</servlet-name>
        <url-pattern>/submitRequest</url-pattern>
    </servlet-mapping>
</web-app>